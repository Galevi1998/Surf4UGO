<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>All Products</title>
    <style>
      body {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: flex-start;
      }

      .product {
        border: 1px solid lightblue;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 20px;
        width: 22%;
        display: inline-block;
      }

      .product-image {
        max-width: 100%;
        max-height: 200px;
      }

      .product-name {
        font-size: 16px;
        margin-top: 5px;
      }

      .button-container {
        display: flex;
        justify-content: space-between;
      }

      .button {
        background-color: lightblue;
        padding: 10px;
        border-radius: 5px;
        color: white;
        text-decoration: none;
        margin-top: 10px;
        display: block;
        width: 48%;
        text-align: center;
      }

      .product-description {
        margin-top: 10px;
      }
    </style>
  </head>
  <body>
    <% products.forEach(function(product) { %>
      <div class="product">
        <h2 class="product-name"><%= product["name of product"] %></h2>
        <p>Price: $<%= product.price %></p>
        <p>Quantity: <%= product.quantity %></p>
        <p>Brand: <%= product.brand %></p>
        <h3>Product Image</h3>
        <% if (product.picture) { %>
          <img class="product-image" src="<%= product.picture %>" alt="<%= product["name of product"] %> Image" />
        <% } else { %>
          <p>No image available</p>
        <% } %>
        <p class="product-description"><%= product.description %></p>
        <div class="button-container">
          <a class="button" href="#">Add to Wish List</a>
          <a class="button" href="#">Add to Cart</a>
        </div>
      </div>
    <% }); %>
  </body>
</html>

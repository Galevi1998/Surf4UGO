
<!DOCTYPE html>
<html>
<head>
    <title>Manager Page</title>
</head>
<body>
    <h1>Manager Page</h1>

    <table>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Permission</th>
        <th>Actions</th>
      </tr>
      <% accounts.forEach(function(account) { %>
        <% if(account.permission!=2){%>
        
        <tr>
          <td><%= account.name %></td>
          <td><%= account.email %></td>
          <td>
            <form action="/manager/edit/<%= account._id %>" method="POST">
              <select name="permission" id="permission" onchange="this.form.submit()">
                <option value="0" <% if (account.permission === 0) { %>selected<% } %>>0</option>
                <option value="1" <% if (account.permission === 1) { %>selected<% } %>>1</option>
                <option value="2" <% if (account.permission === 2) { %>selected<% } %>>2</option>
              </select>
            </form>
          </td>
          <td>
            <a href="/manager/delete/<%= account._id %>">Delete</a>
          </td>
        </tr>
        <%}%>
      <% }); %>
    </table>
</body>
</html>

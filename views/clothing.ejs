    <div class="container" id="product2">
   <h1>Clothing</h1>

    <form action="/clothing" method="post">
      <div class="sorting-container">
        <label for="sorting">Sort By:</label>
        <select id="sorting" name="sorting">
          <option value="product-name">Name</option>
          <option value="product-price">Price</option>
          <option value="product-brand">Brand</option>
        </select>
      </div>
      <button type="submit">Click to sort</button>
    </form>
  </div>
  <form class="row" action="/clothing/Addto" method="post">
    <div class="col">
      <% products.forEach(function(product) { %>
        <div class="card" style="width:400px;height: 620px;" id="products">
          <% if (product.picture) { %>
            <img class="card-img-top" style="width:200px" height="200px" src="<%= product.picture %>" alt="<%= product["name of product"] %> Image" />
          <% } else { %>
            <p>No image available</p>
          <% } %>
          <div class="card-body">
            <h2 class="card-title"><%= product["name of product"] %></h2>
            <p class="card-text">Price: $<%= product.price %></p>
            <p class="card-text">Quantity: <%= product.quantity %></p>
            <p class="card-text" id="description"><%= product.description %></p>
            <div class="button-container2">
              <button class="btn btn-primary" type="submit" name="action" value="cart:<%= product["name of product"] %>">Add to Cart List</button>
              <button class="btn btn-primary" type="submit" name="action" value="wishlist:<%= product["name of product"] %>">Add to Wish List</button>
              <a class="btn btn-primary" href="/show1product/<%= product['name of product'] %>">Product page</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </form>


    <link rel="stylesheet" href="/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>
<body>
     <!-- סרגל עליון -->
  <nav class="navbar navbar-expand-sm bg-light navbar-primary">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="Avatar Logo" style="width:40px;" class="rounded-pill"> 
      </a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav" id="right">
          
          <li class="nav-item">
            <a class="nav-link" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="#"><span class="glyphicon glyphicon-heart"></span></a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="#"><span class="glyphicon glyphicon-search"></span></a>
          </li> 

         <li class="nav-item">
            <a id="Home" class="nav-link" href="/Addproduct">Add product</a>
          </li>
          <li class="nav-item">
            <a id="Home" class="nav-link" href="/updateproducts">Update product</a>
          </li>

        </ul>
        <ul class="navbar-nav" id="mid">
          <li class="nav-item">
            <a class="nav-link" href="/allproducts">All Products</a>
          </li> 
          <li class="nav-item">
            <a class="nav-item" href="/surfboard">Surfboards</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/clothing">Clothing</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/boardshorts">boardshorts</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/surfingequipment">Surfing accessories </a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/sunglasses">Sunglasses</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/outofstock">Out of stock</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>
  <% if (cartItems.length === 0) { %>
    <h1>Cart Empty</h1>
  <% } else { %>
    <form action="/Cart" method="post">
      <table>
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Brand</th>
            <th>Price</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Img</th>
            <th>Total Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let totalPrice = 0; %>
          <% cartItems.forEach(function(item, index) { %>
            <tr>
              <% const product = products[index]; %>
              <% if (product) { %>
              <td><%= product['name of product'] %></td>
              <td><%= product.brand %></td>
              <td><%= product.price %></td>
              <td><%= product.category %></td>
              <td>
                <div class="quantity-select">
                  <select name="quantity" value="<%= item.quantity %>">
                    <% for (let i = 1; i <= product.quantity; i++) { %>
                      <option value="<%= i %>" <% if (i === item.quantity) { %> selected <% } %>><%= i %></option>
                    <% } %>
                  </select>
                </div>
              </td>
              <td><img class="card-img-top" style="width:200px" height="200px" src="<%= product.picture %>" alt="<%= product["name of product"] %> Image" /></td>
              <td><%= product.price * item.quantity %></td>
              <%totalPrice += product.price * item.quantity;%>
              <div>
              <form action="/Cart/delete" method="post">
              <td>
                <input type="hidden" name="itemName" value="<%= product['name of product'] %>">
                <button type="submit" class="delete-button" name="action" value="delete">Delete</button>
              </td>
              </form>
            </div>
              <% } %>
            </tr>
            <% }); %>
        </tbody>
      </table>
      <p>The total price is -<%= totalPrice%> </p>
      <button type="submit" name="action" value="buy" class="delete-button" name="action" value="Clear">Buy</button>
    </form>
    <%}%>


</body>
</html>
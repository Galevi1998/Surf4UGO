  <% if (cartItems.length === 0) { %>
    <h1>Wish-List Empty</h1>
  <% } else { %>
<form action="/WishList" method="post">
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Brand</th>
        <th>Price</th>
        <th>Category</th>
        <th>Quantity</th>
        <th>Img</th>
        <th>Total Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% cartItems.forEach(function(item, index) { %>
      <tr>
        <% const product = products[index]; %>
        <% if (product) { %>
        <td><%= product['name of product'] %></td>
        <td><%= product.brand %></td>
        <td><%= product.price %></td>
        <td><%= product.category %></td>
        <td><img class="card-img-top" style="width:200px" height="200px" src="<%= product.picture %>" alt="<%= product["name of product"] %> Image" /></td>
        <td><%= product.price * item.quantity %></td>
        <div>
          <form action="/WishList/delete" method="post">
          <td>
            <input type="hidden" name="itemName" value="<%= product['name of product'] %>">
            <button type="submit" class="delete-button" name="action" value="delete">Delete</button>
          </td>
          </form>
        </div>
        <div>
          <form action="/WishList/Addto" method="post">
          <td>
            <input type="hidden" name="itemName" value="<%= product['name of product'] %>">
            <button type="submit" class="delete-button" name="action" value="cart:<%= product["name of product"] %>">Add to Cart</button>
          </td>
          </form>
        </div>
      </tr>
      <% } %>
      <% }); %>
    </tbody>
  </table>
  <button class="delete-button" name="action" value="Clear">Clear Wish-List</button>
</form>
<% } %>
